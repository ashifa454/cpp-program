//write a program in cpp to implement on static data member
#include<iostream.h>
#include<conio.h>
class Static
{
static int i;
int j;
public:
Static()
{
}
void setj()
{
j=++i;
}
void printj()
{
cout<<"j="<<j<<endl;
}
static void printi()
{
cout<<"i="<<i<<endl;
}
};
int Static::i=20;
void main()
{
clrscr();
int x;
Static s1,s2;
s1.printi();
s1.printj();
s1.setj();
s1.printj();
s1.printi();
s2.printi();
s2.printj();
getch();
}
